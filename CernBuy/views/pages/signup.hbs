<body class="container">
    <header>
        <div class="ui secondary pointing menu">
            <h1>CernBuy</h1>
        </div>
    </header>

    <main>
        <div class="ui grid container">
            <div class="ui two column centered grid">
                <div class="column">
                    <h2>User-Signup | Create Account</h2>
                    <form action="/register" method="post" class="ui form">
                        <div class="field">
                            <label>Handle</label>
                            <input name="handle" type="text" placeholder="@handle" />
                        </div>
                        <div class="field">
                            <label>Password</label>
                            <input name="password" type="password" placeholder="*********" />
                        </div>
                        <button class="ui primary button" type="submit">Signup</button>
                    </form>
                    <br>
                    <div class="description">
                        <a class="item" href="/login">
                            <span class="user">Have an account? Login <i class="user icon"></i></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>

