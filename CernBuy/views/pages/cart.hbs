<head>
    {{!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css"> --}}
    <link rel="stylesheet" href="/css/home_style.css">
    <link rel="stylesheet" href="/css/sidenav.css">
    <link rel="stylesheet" href="/css/cart.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>CernBuy - Cart</title>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/"><span class="glyphicon glyphicon-home"></span> Home</a></li>
                <li><a href="/cart"><span class="glyphicon glyphicon-shopping-cart"></span> Cart <p id="cart_num">{{num}}</p></a></li>
                <li><a href="/pages/logout"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
            </ul>
        </div>
    </nav>

    <section class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="searchnav">
                    <form action="/search-shop" method="get">
                        <input type="text" placeholder="Search the shop" name="query">
                        <button type="button" class="btn btn-primary btn-sm">Search</button>
                    </form>
                </div>
                <div class="result">
                    <h3>{{post.title}}</h3>
                    <p>${{post.price}}</p>
                    <h5>Options</h5>
                    <form action="/add-to-cart" method="post">
                        {{!-- {{#if post.tag === "electronics" || post.tag === "wears"}}
                            <div>
                                <label>Size</label>
                                <option value="large" class="form-control">Large</option>
                                <option value="medium" class="form-control">Medium</option>
                                <option value="small" class="form-control">Small</option>
                            </div>
                            <div>
                                <label>Colour</label>
                                <option value="black" class="form-control">Black</option>
                                <option value="white" class="form-control">White</option>
                                <option value="brown" class="form-control">Brown</option>
                            </div>
                        {{else}}

                            {{#if post.tag === "books"}}
                                <div>
                                    <label>Size</label>
                                    <option value="large" class="form-control">Large</option>
                                    <option value="medium" class="form-control">Medium</option>
                                    <option value="small" class="form-control">Small</option>
                                </div>
                            {{/if}}

                        {{/if}} --}}

                        <div class="row">
                            <p>Quantity</p>
                            <div class="col-md-3">
                                <input type="button" value="-" class="btn btn-primary btn-sm" id="minus">
                            </div>
                            <div class="col-md-6">
                                <input type="text" name="quantity" id="quantity" value="0">
                            </div>
                            <div class="col-md-3">
                                <input type="button" value="+" class="btn btn-primary btn-sm" id="add">
                            </div>
                        </div>
                        <a href="/add-to-cart/{{ post.image_id }}"><input type="button" id="button" value="ADD TO CART" class="btn btn-default btn-sm"></a>                           

                    </form>
                </div>
            </div>
            <div class="col-md-6" id="cart">
                <h3>Cart Contents</h3>
                {{#each carts}}
                    <div class="row">
                        <div class="col-md-2">
                            <div class="img">
                                <img src="{{ image_url }}" style="max-height: 50px; max-width: 80px; width: 80px;">
                            </div>
                        </div>
                        <div class="col-md-8">
                            <p>{{title}}</p>
                            <div class="row">
                                <div class="col-sm-3">
                                    <input type="button" value="-" class="btn btn-primary btn-sm" id="minus">
                                </div>
                                <div class="col-sm-6">
                                    <input type="text" name="quantity" id="quantity" value="0">
                                </div>
                                <div class="col-sm-3">
                                    <input type="button" value="+" class="btn btn-primary btn-sm" id="add">
                                </div>
                            </div>
                        </div>
                    </div>

                {{/each}}
            </div>
        </div>
    </section>

<script src="https://code.jquery.com/jquery-3.1.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/semantic-ui/2.2.4/semantic.min.js"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.0/jquery-ui.min.js"></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/blueimp-file-upload/9.12.5/js/jquery.iframe-transport.js' type='text/javascript'></script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/blueimp-file-upload/9.12.5/js/jquery.fileupload.js' type='text/javascript'></script>
<script src='https://cdn.jsdelivr.net/jquery.cloudinary/1.0.18/jquery.cloudinary.min.js' type='text/javascript'></script>

</body>