    <div class="row">
        {{#each posts}}

        <div class="col-sm-3 card">
            <div class="img">
                <img src="{{ image_url }}" style="max-height: 130px; max-width: 180px; width: 180px;">
            </div>
            <div class="details">
                <strong>{{title}}</strong>
                <p id="price">${{price}}</p>
            </div>
            
            <div class="content">
                <form action="/admin/destroy" method="post" style="display: inline" id="destroy_form{{ @key }}">
                    <input type="hidden" name="image_id" value="{{ image_id }}">
                    <a onclick="document.getElementById('destroy_form{{ @key }}').submit(); return false;">
                        <i class="remove icon"></i> Remove
                    </a>
                </form>
                <a href="/admin/edit/{{ image_id }}">
                    <i class="edit icon"></i> Edit
                </a>
            </div>
        </div>
        {{/each}}
    </div>
